@model ServiceOne.ViewModels.Security

@using (Html.BeginForm("Security", "Users", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.user_id)
    <div class="row">
        <p class="col-12 pb-4">Change Password</p>
        <div class="col-sm-6">
            <div class="form-group row">
                <label for="username" class="col-4 control-label text-right">New Password</label>
                <div class="col-8">
                    @Html.EditorFor(model => model.new_password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    <div class="form-text text-muted">
                        @Html.ValidationMessageFor(model => model.new_password, "", new { @class = "text-danger" })
                        Insert New password
                    </div>
                </div>
            </div>

        </div>

        <div class="col-sm-6">
            <div class="form-group row">
                <label for="username" class="col-4 control-label text-right">Confirm Password</label>
                <div class="col-8">
                    @Html.EditorFor(model => model.confirm_password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    <div class="form-text text-muted">
                        @Html.ValidationMessageFor(model => model.confirm_password, "", new { @class = "text-danger" })
                        Insert Confirm password
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="form-group col-12 text-right">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i>
            Save
        </button>
        @*<a asp-controller="MasterUsers" asp-action="Index" class="btn btn-default"><i class="fa fa-undo"></i> Cancel</a>*@
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}