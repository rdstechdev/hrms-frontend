
@model ServiceOne.Models.DIVISION

@using (Html.BeginForm("Create", "Divisions", FormMethod.Post, new { @class = "form", id = "create-edit-form" }))
{
    <div class="modal-header">
        <h4 class="modal-title">@ViewBag.Header</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label for="company_id" class="col-2 control-label text-right">Company</label>
            <div class="col-10">
                @Html.DropDownList("company_id", (IEnumerable<SelectListItem>)ViewBag.Company, new { company_id = "Value", @class = "form-control" })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.company_id, "", new { @class = "text-danger" })
                    Insert company_id
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="department_id" class="col-2 control-label text-right">Department</label>
            <div class="col-10">
                @Html.DropDownList("department_id", (IEnumerable<SelectListItem>)ViewBag.Departements, new { dep_id = "Value", @class = "form-control" })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.department_id, "", new { @class = "text-danger" })
                    Insert department_id
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="division_id" class="col-2 control-label text-right">Division Id</label>
            <div class="col-10">
                @Html.EditorFor(model => model.division_id, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.division_id, "", new { @class = "text-danger" })
                    Insert division_id
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="division_name" class="col-2 control-label text-right">Division Name</label>
            <div class="col-10">
                @Html.EditorFor(model => model.division_name, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.division_name, "", new { @class = "text-danger" })
                    Insert division_name
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Description</label>
            <div class="col-10">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    Insert description
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input id="btn-save" type="button" value="Submit" class="btn btn-default" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
}

<script>
    $(document).ready(function () {
        $("#btn-save").click(function () {
            var data = $("#create-edit-form").serialize();
            $.ajax({
                type: "POST",
                url: "@Url.Action("Create", "Divisions")",
                data: data
            }).done(function (response) {
                if (response.result.Message == "ValidationError") {
                    $("#modal-default .modal-content").html(response.partialView);
                }
                else {
                    if (response.result.IsSucceed) {
                        swal({
                            title: "Success",
                            text: response.result.Message,
                            type: "success"
                        }).then(function () {
                            window.location.href = location.protocol + "//" + location.host + "@Url.Action("Index")"
                        })
                    }
                    else {
                        swal("Failed", response.result.Message, "error");
                    }
                }
            }).fail(function () {

            });
        });

        $('#company_id').change(function () {
            var company_id = document.getElementById("company_id").value;
            console.log(company_id);

            $.ajax({
                type: "GET",
                url: "@Url.Action("GetDepartments", "Divisions")",
                data: { company_id: company_id }
            }).done(function (response) {
                //console.log(response);
                var select = $("#department_id");
                select.empty();
                select.append($('<option/>', {
                    value: 0,
                    text: "Select Department"
                }));
                $.each(response.department, function (index, itemData) {
                    select.append($('<option/>', {
                        value: itemData.Value,
                        text: itemData.Text
                    }));
                    //console.log(itemData.Value);
                });
            }).fail(function () {

            });

        });
    });
</script>
