
@model ServiceOne.Models.HOME_SLIDERS

@using (Html.BeginForm("Create", "HomeSliders", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form", id = "create-edit-form" }))
{
    <div class="modal-header">
        <h4 class="modal-title">@ViewBag.Header</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <label for="tembusan" class="col-sm-2 col-form-label">Image</label>
            <div class="col-10">
                <input type="file" id="file" name="file" accept=".jpg, .png, .jpeg, .PNG">
                <div id="selectedFiles"></div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input id="btn-save" type="submit" value="Submit" class="btn btn-default" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
}

