
@model ServiceOne.ViewModels.Zonasi

@using (Html.BeginForm("Zonasi", "Users", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.user_id)
    <div class="row">
        <p class="col-12 pb-4">Change Password</p>
        <div class="col-sm-6">
            <div class="form-group row">
                <label for="zonasi_id" class="col-4 control-label text-right">Zonasi Id</label>
                <div class="col-8">
                    @Html.EditorFor(model => model.zonasi_id, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    <div class="form-text text-muted">
                        @Html.ValidationMessageFor(model => model.zonasi_id, "", new { @class = "text-danger" })
                        Insert zonasi_id
                    </div>
                </div>
            </div>

        </div>

        <div class="col-sm-6">
            <div class="form-group row">
                <label for="area_name" class="col-4 control-label text-right">Area</label>
                <div class="col-8">
                    @Html.EditorFor(model => model.area_name, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    <div class="form-text text-muted">
                        @Html.ValidationMessageFor(model => model.area_name, "", new { @class = "text-danger" })
                        Insert area_name
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="form-group col-12 text-right">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i>
            Save
        </button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}