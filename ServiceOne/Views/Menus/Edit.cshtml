@model ServiceOne.Models.MENU

@using (Html.BeginForm("Create", "Menus", FormMethod.Post, new { @class = "form", id = "create-edit-form" }))
{
    <div class="modal-header">
        <h4 class="modal-title">@ViewBag.Header</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Menu Name</label>
            <div class="col-10">
                @Html.EditorFor(model => model.menu_name, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.menu_name, "", new { @class = "text-danger" })
                    Insert menu_name
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Site Url</label>
            <div class="col-10">
                @Html.EditorFor(model => model.site_url, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.site_url, "", new { @class = "text-danger" })
                    Insert site_url
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Icon</label>
            <div class="col-10">
                @Html.EditorFor(model => model.icon, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.icon, "", new { @class = "text-danger" })
                    Insert icon
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Parent</label>
            <div class="col-10">
                @Html.EditorFor(model => model.parent, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.parent, "", new { @class = "text-danger" })
                    Insert parent
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Parent Id</label>
            <div class="col-10">
                @Html.DropDownList("parent_id", (IEnumerable<SelectListItem>)ViewBag.ParentList, new { parent_id = "Value", @class = "form-control" })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.parent_id, "", new { @class = "text-danger" })
                    Insert parent_id
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-2 control-label text-right">Sequance</label>
            <div class="col-10">
                @Html.EditorFor(model => model.sequance, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-text text-muted">
                    @Html.ValidationMessageFor(model => model.sequance, "", new { @class = "text-danger" })
                    Insert sequance
                </div>
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <input id="btn-save" type="button" value="Submit" class="btn btn-default" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
}

<script>
    $(document).ready(function () {
        $("#btn-save").click(function () {
            var data = $("#create-edit-form").serialize();
            var id = $(this).data("id");
            $.ajax({
                type: "POST",
                url: "@Url.Action("Edit", "Menus")?id=' + id",
                data: data
            }).done(function (response) {
                if (response.result.Message == "ValidationError") {
                    $("#modal-default .modal-content").html(response.partialView);
                }
                else {
                    if (response.result.IsSucceed) {
                        swal({
                            title: "Success",
                            text: response.result.Message,
                            type: "success"
                        }).then(function () {
                            window.location.href = location.protocol + "//" + location.host + "@Url.Action("Index")"
                        })
                    }
                    else {
                        swal("Failed", response.result.Message, "error");
                    }
                }
            }).fail(function () {

            });
        });
    });
</script>
